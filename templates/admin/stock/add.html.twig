{% extends 'base.html.twig' %}

{% block title %}Ajouter Article{% endblock %}

{% block body %}

    <div class="jumbotron text-center">
        <h1>Ajouter un article au stock de {{ stock.label }}</h1>
    </div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Nom de l'article</th>
            <th>REF Article</th>
            <th>Action</th>
        </tr>
        </thead>
        {% for article in articles %}
            <tr>
                <td>{{ article.label }}</td>
                <td>{{ article.ref }}</td>
                <td>
                    <a href="#" class="btn btn-secondary">Ajouter</a>
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
